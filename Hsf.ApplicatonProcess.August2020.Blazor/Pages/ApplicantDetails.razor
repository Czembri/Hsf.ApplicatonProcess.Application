@page "/applicantdetails/{id}"
@inherits ApplicantDetailsBase

@if (Applicant == null)
{
    <div class="spinner"></div>
}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>@Applicant.Name @Coordinates</h1>
                </div>
                <div class="card-body text-center" @onmousemove="@Mouse_Move">
                    <h4>Applicant ID: @Applicant.ID</h4>
                    <h4>Applicant Address: @Applicant.Address</h4>
                    <h4>Applicant E-mail: @Applicant.EmailAddress</h4>
                    <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>

                </div>
                <div class="card-footer text-center @CssClass">
                    <a href="/" class="btn btn-primary">Back</a>
                    <a href="#" class="btn btn-primary">Edit</a>
                    <a href="#" class="btn btn-primary">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
